<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShareCode.MainPage"
             Title="PSYC">

    <Grid Padding="20">
        <!-- Grid Row와 Column 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- 왼쪽 파일 목록 영역 -->
            <ColumnDefinition Width="1*" />
            <!-- 오른쪽 설정 영역 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 뷰포트: 파일 목록 영역 -->
        <CollectionView x:Name="FileListView"
                Grid.Row="0" Grid.Column="0"
                BackgroundColor="White"
                Margin="10"
                SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <!-- 체크박스 추가 -->
                        <CheckBox IsChecked="{Binding IsChecked}" />
                        <Label Text="{Binding FileName}"
                       FontSize="14"
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- 오른쪽 설정 영역 -->
        <StackLayout Grid.Row="0" Grid.Column="1"
                     VerticalOptions="Start"
                     Padding="10"
                     Spacing="15"
                     BackgroundColor="#F9F9F9">
            <Label Text="Language"
                   FontAttributes="Bold"
                   FontSize="16"
                   HorizontalOptions="Center" />

            <!-- 라디오 버튼 -->
            <RadioButton GroupName="Language" Content="C#" />
            <RadioButton GroupName="Language" Content="Java" />
            <RadioButton GroupName="Language" Content="C" />
            <RadioButton GroupName="Language" Content="C++" />
            <RadioButton GroupName="Language" Content="Assembly" />

            <!-- 버튼 -->
            <StackLayout VerticalOptions="EndAndExpand" Spacing="10">
                <Button x:Name="Open"
                        Text="Open"
                        WidthRequest="100"
                        HeightRequest="40"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Center" />

                <Button x:Name="Export"
                        Text="Export"
                        WidthRequest="100"
                        HeightRequest="40"
                        IsEnabled="False"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="10"
                        HorizontalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
